extends layout

block jsmaster
	script(type='text/javascript', src='/js/tmpl/menu.js')
	script(type='text/javascript', src='/js/reports/landscape_receipt.js')
	script(type='text/javascript', src='/components/jspdf/jspdf.plugin.split_text_to_size.js')

block navigationitems
	ul.nav.navbar-nav
		li.dropdown
			a.dropdown-toggle(href='#', data-toggle='dropdown')
				| Pacientes
				b.caret
			ul.dropdown-menu
				li
					a(href='#') Listado
				li
					a(href='#') Registro
				li.divider
	form.navbar-form.navbar-left(role='search')
		.form-group
			input#txBarSearchPatient.form-control(type='text', placeholder='Busqueda de Pacientes')
	.navbar-form.navbar-right(role='form')
		a#btnsessionlogout.btn.btn-success Cerrar Session

block content_master
	.row.row-offcanvas.row-offcanvas-right
		.col-xs-12.col-sm-9.col-md-9
			block content
		#sidebar.col-xs-12.col-sm-3.col-md-3.sidebar-offcanvas(role='navigation')
			.list-group
				a#addEvent.list-group-item.active(href='#') 
					i.fa.fa-calendar
					|  Agregar Cita
			block options
				#pnl_menu.panel-group
				.panel.panel-default
					.panel-heading
						h4.panel-title
							a(data-toggle='collapse',data-parent='#pnl_menu')
								i.fa.fa-users
								|  Usuarios
					.panel-body
						form#send-message
							.row
								.col-md-12
									.form-group
										select#slusersconnect.form-control
								.col-md-12
									.form-group
										#messages.well
											#nicknames
											#lines
								.col-md-12
										.input-group
											input#message(type='text',class='form-control')
											span.input-group-btn
												a.btn.btn-default(type='button')
													i.fa.fa-envelope


	include home/events

	script#entry-template(type='text/x-handlebars-template')
		<div class="panel panel-default">
		<div class="panel-heading">
		<h4 class="panel-title">
		<a data-toggle="collapse" data-parent="#pnl_menu" href="{{{link id}}}"}><i class="fa fa-{{icon}}"></i> {{text}}</a>
		</h4>
		</div>
		<div id="{{id}}" class="panel-collapse collapse {{show}}">
		<ul class="list-group">
		{{#each items}}
		<li class="list-group-item"><a href="{{route}}">{{text}}</a></li>
		{{/each}}
		</ul>
		</div>
		</div>
