extends layout

block jsmaster
	script(type='text/javascript', src='/js/tmpl/menu.js')

block navigationitems
	ul.nav.navbar-nav
		li.dropdown
			a.dropdown-toggle(href='#', data-toggle='dropdown')
				| Pacientes
				b.caret
			ul.dropdown-menu
				li
					a(href='#') Listado
				li
					a(href='#') Registro
				li.divider
	form.navbar-form.navbar-left(role='search')
		.form-group
			input#txBarSearchPatient.form-control(type='text', placeholder='Busqueda de Pacientes')
	.navbar-form.navbar-right(role='form')
		a.btn.btn-success(href='/logout') Cerrar Session

block content_master
	.row.row-offcanvas.row-offcanvas-right
		.col-xs-12.col-sm-9.col-md-9
			p.pull-right.visible-xs
				button.btn.btn-primary.btn-xs(type='button', data-toggle='offcanvas') Menus
			block content
		#sidebar.col-xs-6.col-sm-3.col-md-3.sidebar-offcanvas(role='navigation')
			.list-group
				a#addEvent.list-group-item.active(href='#') Agregar Cita
			block options
				#pnl_menu.panel-group

	include home/events

	script#entry-template(type='text/x-handlebars-template')
		<div class="panel panel-default">
		<div class="panel-heading">
		<h4 class="panel-title">
		<a data-toggle="collapse" data-parent="#pnl_menu" href="{{{link id}}}"}><i class="fa fa-{{icon}}"></i> {{text}}</a>
		</h4>
		</div>
		<div id="{{id}}" class="panel-collapse collapse {{show}}">
		<div class="panel-body">
		<h5>{{description}}</h5>
		</div>
		<ul class="list-group">
		{{#each items}}
		<li class="list-group-item"><a href="{{route}}">{{text}}</a></li>
		{{/each}}
		</ul>
		</div>
		</div>
