extends ../site

block js
	script(type='text/javascript', src='/js/patients/add.js')

block content
	.container.theme-showcase(role='main').col-md-12
		.page-header
			h1=title
		form#frmPatient.form-horizontal(role='form',method='post')
			.form-group
				legend Informacion General
			.form-group
				label.col-sm-2(for='txpatientsname') Nombre
				.col-sm-10
					input#txpatientsname.form-control.spaced-alphabetic(type='text', placeholder='Nombres del Paciente',name='txpatientsname')
			.form-group
				label.col-sm-2(for='txpatientslastname') Apellidos
				.col-sm-10
					input#txpatientslastname.form-control.spaced-alphabetic(type='text', placeholder='Apellidos del Paciente',name='txpatientslastname')
			.form-group
				label.col-sm-2(for='txpatientsbirthday') Fecha de Nacimiento
				.col-sm-10
					input#txpatientsbirthday.form-control.spaced-alphabetic(type='date', name='txpatientsbirthday')
			.form-group
				label.col-sm-2(for='txpatientsidentification') Identificacion
				.col-sm-10
					input#txpatientsidentification.form-control.integer(type='text', placeholder='Identificacion',name='txpatientsidentification')
			.form-group
				label.col-sm-2(for='slpatientscivilstatus') Estado Civil
				.col-sm-10
					select#slpatientscivilstatus.form-control(data-live-search='true', placeholder='Estado Civil',name='slpatientscivilstatus')
			.form-group
				label.col-sm-2(for='slpatientssex') Sexo
				.col-sm-10
					select#slpatientssex.form-control(data-live-search='true', placeholder='Sexo',name='slpatientssex')
			.form-group
				label.col-sm-2(for='slpatientsprofession') Profesion
				.col-sm-10
					select#slpatientsprofession.form-control(data-live-search='true', placeholder='Profesion',name='slpatientsprofession')

			.form-group
				legend Direcciones
			.form-group
				label.col-sm-2(for='slpatientscountry') Pais
				.col-sm-10
					select#slpatientscountry.form-control( placeholder='Pais',name='slpatientscountry')
			.form-group
				label.col-sm-2(for='slpatientscity') Ciudad
				.col-sm-10
					select#slpatientscity.form-control( data-size='false', placeholder='Ciudad', name='slpatientscity')
			.form-group
				label.col-sm-2(for='txpatientsaddress') Direccion
				.col-sm-10
					input#txpatientsaddress.form-control.spaced-alphanumeric(type='text', placeholder='Direccion',name='txpatientsaddress')

			.form-group
				legend Informacion de Contacto
			.form-group
				label.col-sm-2(for='txpatientsphone') Telefono
				.col-sm-10
					input#txpatientsphone.form-control.integer(type='tel', placeholder='Telefono',name='txpatientsphone')
			.form-group
				label.col-sm-2(for='txpatientsemail') Email
				.col-sm-10
					input#txpatientsemail.form-control.email(type='email', placeholder='Email',name='txpatientsemail')
			
		.well.well-sm.text-center
			button#btAddPatient.btn.btn-primary(type='button') Grabar
			button#btCancelPatient.btn.btn-danger(type='button') Cancelar