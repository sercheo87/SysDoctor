extends ../site

block js
	script(type='text/javascript', src='/js/patients/detail.js')

block content
	.theme-showcase(role='main')
		.page-header
			h2=title

		//Nav tabs 
		ul.nav.nav-tabs
			li.active
				a(href='#pnlInformation', data-toggle='tab') #lbtitlepersonalinformation
			li
				a(href='#ctnTblCtrlMedic', data-toggle='tab') #lbtitlegeneralinformation
			li
				a(href='#messages', data-toggle='tab') Messages
			li
				a(href='#settings', data-toggle='tab') Settings
		//Tab panes 
		.tab-content
			#pnlInformation.tab-pane.active
				.form-horizontal
					input#tx_patient(type='hidden')
					input#tx_medical(type='hidden')
					.row
						.col-xs-12.col-sm-6.col-md-6
							.form-group
								label#lbName.col-xs-6.col-sm-6.control-label
								.col-xs-6.col-sm-6
									p#pName.form-control-static
						.col-xs-12.col-sm-6.col-md-6
							.form-group
								label#lbYearsOld.col-xs-6.col-sm-6.control-label
								.col-xs-6.col-sm-6
									p#pYearsOld.form-control-static
						.col-xs-12.col-sm-6.col-md-6
							.form-group
								label#lbSex.col-xs-6.col-sm-6.control-label
								.col-xs-6.col-sm-6
									p#pSex.form-control-static
						.col-xs-12.col-sm-6.col-md-6
							.form-group
								label#lbJob.col-xs-6.col-sm-6.control-label
								.col-xs-6.col-sm-6
									p#pJob.form-control-static
			#ctnTblCtrlMedic.tab-pane
					.form(role='form')
						.row
							.col-md-6
								.form-group
									label.control-label(for='tx_med_e_habit') Habitos
									input#tx_med_e_habit.form-control(type='text', placeholder='Habitos', disabled='disabled')

							.col-md-6
								.form-group
									label.control-label(for='tx_med_e_antecedent') Antecedentes
									input#tx_med_e_antecedent.form-control(type='text', placeholder='Antecedentes Familiares', disabled='disabled')

							.col-md-6
								.form-group
									label.control-label(for='tx_med_e_alergy') Alergias
									input#tx_med_e_alergy.form-control(type='text', placeholder='Alergias', disabled='disabled')

							.col-md-6
								.form-group
									label.control-label(for='tx_med_e_bloodtype') Tipo de Sangre
									input#tx_med_e_bloodtype.form-control(type='text', placeholder='Tipo de Sangre', disabled='disabled')

							.col-md-12
								.form-group
									label.control-label(for='tx_med_e_eobservation') Observacion
									textarea#tx_med_e_eobservation.form-control(type='text', placeholder='Observacion', disabled='disabled')

			#messages.tab-pane ...
			#settings.tab-pane ...

		#TblCtrlMedic.panel.panel-default
			.panel-heading.clearfix

				.btn-group.btn-group-sm.pull-right
					a#itemAddInfo.btn.btn-default
						i.fa.fa-plus-square
					a#itemEditInfo.btn.btn-default
						i.fa.fa-edit
			.panel-body

		.panel.panel-default
			.panel-heading.clearfix
				h4#lbtitlecontrol.panel-title.pull-left
				.btn-group.btn-group-sm.pull-right
					span#itemAddControl.btn.btn-default
						i.fa.fa-plus-square
					span#itemFilter.btn.btn-default
						i.fa.fa-filter
					span#itemPrint.btn.btn-primary
						i.fa.fa-print
			.panel-body
				#ctnTblControl.col-md-12
				form#frMedConDetail.form(role='form')
					.row
						.col-md-6
							.form-group
								label.control-label(for='tx_mcd_id',disabled='disabled') Codigo
								input#tx_mcd_id.form-control(name='tx_mcd_id',type='text', placeholder='Codigo', disabled='disabled')

						.col-md-6
							.form-group
								label.control-label(for='tx_mcd_date') Fecha
								input#tx_mcd_date.form-control(name='tx_mcd_date',type='text', placeholder='Fecha', disabled='disabled')

						.col-md-3
							.form-group
								label.control-label(for='tx_mcd_weidth') Peso
								input#tx_mcd_weidth.form-control.integer(name='tx_mcd_weidth',type='number', placeholder='Peso')

						.col-md-3
							.form-group
								label.control-label(for='tx_mcd_size') Altura
								input#tx_mcd_size.form-control.integer(name='tx_mcd_size',type='number', placeholder='Altura')

						.col-md-3
							.form-group
								label.control-label(for='tx_mcd_pressure') Presion
								input#tx_mcd_pressure.form-control.alphanumeric(name='tx_mcd_pressure', type='text', placeholder='Presion')

						.col-md-3
							.form-group
								label.control-label(for='tx_mcd_pulse') Pulso
								input#tx_mcd_pulse.form-control.alphanumeric(name='tx_mcd_pulse',type='text', placeholder='Pulso')

						.col-md-12
							.form-group
								label.control-label(for='tx_mcd_reason') Motivo
								textarea#tx_mcd_reason.form-control.alphanumeric(name='tx_mcd_reason',type='text', placeholder='Motivo')

						.col-md-12
							.form-group
								label.control-label(for='tx_mcd_observation') Observaciones
								textarea#tx_mcd_observation.form-control(name='tx_mcd_observation',type='text', placeholder='Observaciones')

					a#btokMedAppointment.btn.btn-primary(type='button')
						i.fa.fa-floppy-o
						|  Grabar

					a#btcancelMedAppointment.btn.btn-primary(type='button')
						i.fa.fa-arrow-circle-o-left
						|  Cancelar
					hr
					fieldset
						table#tbl_recipe.table.table-hover
							thead
								tr
									th
									th.text-center
										| Medicamento
									th.text-center
										| Dosis
									th.text-center
										| Nota
							tbody

		//mdlMedInfoBase
		#mdlMedInfoBase.modal.fade
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal') Ã—
						h4.modal-title Registro Inicial del Paciente
					.modal-body
						form#frMedical.form-horizontal.form(role='form')

							.form-group
								label.control-label.col-md-4(for='tx_med_habit') Habitos
								.col-md-8
									input#tx_med_habit.form-control.alphanumeric(type='text', placeholder='Habitos')

							.form-group
								label.control-label.col-md-4(for='tx_med_antecedent') Antecedentes
								.col-md-8
									input#tx_med_antecedent.form-control.alphanumeric(type='text', placeholder='Antecedentes Familiares')

							.form-group
								label.control-label.col-md-4(for='tx_med_alergy') Alergias
								.col-md-8
									input#tx_med_alergy.form-control.alphanumeric(type='text', placeholder='Alergias')

							.form-group
								label.control-label.col-md-4(for='tx_med_bloodtype') Tipo de Sangre
								.col-md-8
									input#tx_med_bloodtype.form-control.alphanumeric(type='text', placeholder='Tipo de Sangre')

							.form-group
								label.control-label.col-md-4(for='tx_med_observation') Observacion
								.col-md-8
									textarea#tx_med_observation.form-control.alphanumeric(type='text', placeholder='Observacion')


					//dialog buttons 
					.modal-footer
						button#btcancelGeneralMedGen.btn.btn-default(type='button')
							i.fa.fa-arrow-left
							|  Cancelar
						button#btokGeneralMedGen.btn.btn-primary(type='button')
							i.fa.fa-floppy-o
							|  Grabar
		//-----------------------------------------------------------------------------------

	script(type='text/javascript').
